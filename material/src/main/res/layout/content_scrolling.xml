<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_scrolling" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".Register">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="5dp">
        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/kodesales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:hint="Kode Sales"
            android:singleLine="true"
            android:includeFontPadding="true"
            flatui:fl_theme="@array/sea" />


        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/namasales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:hint="Nama Sales"
            android:includeFontPadding="true"
            flatui:fl_theme="@array/sea" />


        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:hint="Username"
            android:includeFontPadding="true"
            flatui:fl_theme="@array/sea" />


        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:hint="Password"
            android:includeFontPadding="true"
            flatui:fl_theme="@array/sea" />


        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/kodearea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:hint="Kode Area"
            android:includeFontPadding="true"
            flatui:fl_theme="@array/sea" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/imei"
            android:textColor="#0b84aa"
            android:layout_margin="10dp"
            android:textSize="20dip"
            android:gravity="center"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/namaIMEI"
            android:textColor="#0b84aa"
            android:layout_margin="10dp"
            android:textSize="20dip"
            android:gravity="center"/>


        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/kodeaktivasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:hint="Kode Aktivasi"
            android:includeFontPadding="true"
            flatui:fl_theme="@array/sea" />


        <com.cengalabs.flatui.views.FlatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:includeFontPadding="true"
            flatui:fl_theme="@array/sea"
            android:text="gps"
            />


        <com.cengalabs.flatui.views.FlatCheckBox
            android:id="@+id/gps45"
            android:layout_margin="10dp"
            flatui:fl_theme="@array/sea" android:layout_width="wrap_content"
            android:layout_height="match_parent"/>


        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/ipserver2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:hint="IP Server"
            android:includeFontPadding="true"
            flatui:fl_theme="@array/sea" />



        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/btnLogin"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:text="@string/simpan"
            android:singleLine="true"
            flatui:fl_blockButtonEffectHeight="3dp" />



</LinearLayout>
</android.support.v4.widget.NestedScrollView>
