<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_scrolling_two" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".Register">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="5dp">
        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/norangka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:hint="Masukkan No Rangka"
            android:includeFontPadding="true"
            flatui:fl_theme="@array/grass" />


        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/nomesin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:hint="Masukkan No Mesin"
            android:includeFontPadding="true"
            flatui:fl_theme="@array/grass" />


        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/platkendaraan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:hint="Masukkan Plat Kendaraan"
            android:includeFontPadding="true"
            flatui:fl_theme="@array/grass" />





        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/btnLogin"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:text="Check"
            flatui:fl_blockButtonEffectHeight="3dp" />



    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
